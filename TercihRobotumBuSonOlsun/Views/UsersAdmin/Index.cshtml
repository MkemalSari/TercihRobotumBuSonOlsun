@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Kullanıcı Kontrol";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Yeni Kullanıcı Oluştur", "Create",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Kullanıcılar
            @*@Html.DisplayNameFor(model => model.UserName)*@
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
