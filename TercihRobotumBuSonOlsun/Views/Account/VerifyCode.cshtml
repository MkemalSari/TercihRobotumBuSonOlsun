@model IdentitySample.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Doğrulama Kodunuzu Giriniz";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.Hidden("provider", @Model.Provider)
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@ViewBag.Status</h4>
    <hr />
    <div class="form-group row">
        @*@Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })*@
        <div class = "col-md-1">
            <p class="text-center">Kodunuz:</p>
        </div>
        <div class="col-md-11">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberBrowser)
                 Bu tarayıcıyı hatırla?
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Gönder" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
