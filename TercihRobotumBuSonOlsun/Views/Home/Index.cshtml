@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";

}


<div class="row">

    <div class="col-sm-2 bg-light p-3">
        @using (Html.BeginForm("Sorgula", "Home", FormMethod.Get, new { role = "form" }))
        {

            <form>
                <div class="card mb-1">
